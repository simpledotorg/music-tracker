<% if @albums.none? %>
  No albums yet!
<% else %>
  <table>
    <thead>
      <th>Artist</th>
      <th>Title</th>
      <th>Genre</th>
      <th>Year</th>
      <th># tracks</th>
      <th>Fav?</th>
      <th>Actions</th>
    </thead>
  <% @albums.each do |album| %>
      <tr>
        <td><%= album.artist %></td>
        <td><%= link_to album.title, album_path(album) %></td>
        <td><%= album.genre %></td>
        <td><%= album.year %></td>
        <td><%= album.tracks.size %></td>
        <td><%= "❤️" if current_user.favorites.find_by(favoritable: album) %> </td>
        <td><%= link_to "Edit", edit_album_path(album) %>
      </tr>
  <% end %>
  </table>
<% end %>

<p>
  <%= link_to "Create album", new_album_path %>
</p>
